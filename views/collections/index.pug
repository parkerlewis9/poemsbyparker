include ../includes/head.pug
body.container
    h1 Collections by Parker
    ul
        each collection, i in collections
            form(name=`collection${i}`, action=`/collections/c`, method='GET')
                    input(type='hidden', name='name', value=`${collection.name}`)
                    a(href=`javascript:document.forms["collection${i}"].submit()`) #{collection.name}