include ../includes/head.pug
.container
    h1 #{poems[0].collection_name}

    each poem, i in poems
        form(name=`poem${i}`, action=`/collections/poems/p`, method='GET')
            input(type='hidden', name='collection', value=`${poem.collection_name}`)
            input(type='hidden', name='title', value=`${poem.title}`)
            a(href=`javascript:document.forms["poem${i}"].submit()`) #{poem.title}